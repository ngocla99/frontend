# ===========================================
# Environment Variables Configuration
# ===========================================
# This file uses @t3-oss/env-nextjs for type-safe environment variables.
# See src/config/env.ts for validation schemas.
#
# To skip validation during builds (e.g., Docker):
# SKIP_ENV_VALIDATION=true

# ===========================================
# Application Environment
# ===========================================
NODE_ENV=development

# ===========================================
# Client-side Variables (NEXT_PUBLIC_*)
# ===========================================
# These are exposed to the browser and must start with NEXT_PUBLIC_

# API Base URL - Use Next.js API routes (default: /api)
NEXT_PUBLIC_BASE_API_URL=/api

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# Server-only Variables
# ===========================================
# These are only accessible on the server-side (API routes, server components)

# Supabase Server Configuration
SUPABASE_SIGNED_URL_TTL=86400
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Email Validation
# Set to true in development to allow non-.edu emails for testing
# In production, only .edu domains are allowed
DEV_ALLOW_NON_EDU_EMAILS=true

# Replicate AI Service Configuration (Face Analysis)
REPLICATE_API_TOKEN=r8_your_replicate_token_here
REPLICATE_MODEL_VERSION=your_model_version_id_here

# Python AI Service Configuration (InsightFace) - DEPRECATED, use Replicate instead
# PYTHON_AI_SERVICE_URL=http://localhost:5000
# PYTHON_AI_SERVICE_API_KEY=your-ai-service-api-key

# FAL.AI Service (Baby Image Generation)
FAL_AI_API_KEY=your-fal-api-key
FAL_BABY_MODEL_ID=fal-ai/nano-banana/edit